@model IEnumerable<SJiraCore.Models.DashboardModel>


<div class="col-lg-12">
    <div class="row">
        <div class="col-lg-12">
            <h3>Search Dashboards</h3>
            <small>This page allows you to search for all visivble dashboards.</small>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.panel -->
    <br />
    <form method="Post" action="@Url.Action("Search", "Dashboard")"  role="form">
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Search</label>
                    <input>
                    <p class="help-block">Searches in the dashboard's name and description.</p>
                </div>
                <div class="form-group">
                    <label>Shared With</label>
                    <div>
                        @Html.DropDownList("SharedWithId", "Anyone")
                        <p class="help-block">All dashboard that you can see.</p>
                    </div>
                </div>
                <button type="submit" class="btn btn-default">Search</button>           
            </div>
            <!-- /.col-lg-6 (nested) -->
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Owner</label>
                    <div>
                        @Html.DropDownList("OwnerId", String.Empty)
                        <p class="help-block"><i class="fa  fa-users"></i> 
                            Start typing to get a list of possible matches.</p>
                    </div>
                </div>
            </div>
            <!-- /.col-lg-6 (nested) -->
        </div>
        <!-- /.row -->
    </form>
    <br />
</div>
<!-- /.col-lg-12 -->
